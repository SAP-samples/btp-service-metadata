  "servicePlans": [
    {
      "name": "standard",
      "displayName": "Standard",
      "category": "SERVICE",
      "description": "Standard plan",
      "isFree": true,
      "isBeta": false,
      "dataCenters": [
        {
          "region": "ap10",
          "name": "Australia (Sydney)"
        },
