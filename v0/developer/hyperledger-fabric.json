        "service_binding": {
          "create": {
            "parameters": {
              "$schema": "http://json-schema.org/draft-07/schema",
              "type": "object",
              "properties": {
                "channelId": {
                  "default": "< the channel that should be exported >",
                  "description": "Reverse DNS id of the channel to create the service key for.",
